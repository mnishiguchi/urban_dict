/ required locals: f
= f.input :word, input_html: { list: "Definition-wordOptions"}
datalist[id="Definition-wordOptions"]
  = options_for_select(Definition.distinct.pluck(:word))
= f.input :definition, input_html: { rows: "10" }
= f.input :example, input_html: { rows: "10" }
= f.input :tag_names, label: "Tags", input_html: { value: f.object.tag_names.join(","), placeholder: "Comma separated" }
= f.input :user_id, as: :hidden, input_html: { value: current_user.id }
